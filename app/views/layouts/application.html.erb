<!DOCTYPE html>
<html>
  <head>
    <title>Nexmo Number Insights with Rails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash %>
      <% flash.each do |key, msg| %>
        <%= msg %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
